<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <!-- 不可视的控件 防止加载Activity时第一个EditText控件变为编辑状态  -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/page_background"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <android.support.v7.widget.CardView style="@style/cardview_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout style="@style/task_item_title_layout_style">

                    <ImageView
                        style="@style/task_icon_style"
                        android:src="@drawable/ic_publish_type" />

                    <TextView
                        style="@style/textview_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型" />

                </LinearLayout>

                <View style="@style/interval_view" />

                <include layout="@layout/service_type_layout" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--...............................................-->

        <android.support.v7.widget.CardView style="@style/cardview_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout style="@style/task_item_title_layout_style">

                    <ImageView
                        style="@style/task_icon_style"
                        android:src="@drawable/ic_access_time" />

                    <TextView
                        style="@style/textview_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时限" />

                    <TextView
                        android:id="@+id/task_time_limit_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingEnd="20dp"
                        android:text="(请选择时间)"
                        android:textColor="#3b8ad5" />

                </LinearLayout>

                <View style="@style/interval_view" />

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/publish_time_limit_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:bsb_auto_adjust_section_mark="true"
                    app:bsb_bubble_color="@color/primary"
                    app:bsb_is_float_type="true"
                    app:bsb_max="4"
                    app:bsb_min="0.5"
                    app:bsb_second_track_color="@color/colorPrimary"
                    app:bsb_section_count="7"
                    app:bsb_section_text_position="below_section_mark"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_thumb_color="@color/primary_darker"
                    app:bsb_thumb_text_size="18sp"
                    app:bsb_touch_to_seek="true"
                    app:bsb_track_color="@color/monsoon" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--................................................................-->

        <android.support.v7.widget.CardView style="@style/cardview_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout style="@style/task_item_title_layout_style">

                    <ImageView
                        style="@style/task_icon_style"
                        android:src="@drawable/ic_description" />

                    <TextView
                        style="@style/textview_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述" />

                </LinearLayout>

                <View style="@style/interval_view" />

                <android.support.v7.widget.CardView
                    style="@style/inner_cardview_style"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/public_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_corner"
                        android:gravity="top|left"
                        android:hint="添加任务的详细描述,如最后送达地点."
                        android:lines="4"
                        android:maxLength="30"
                        android:maxLines="5"
                        android:scrollbars="vertical"
                        android:textSize="15sp"
                        app:met_hideUnderline="true"
                        app:met_maxCharacters="30" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--.......................................................-->

        <android.support.v7.widget.CardView style="@style/cardview_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout style="@style/task_item_title_layout_style">

                    <ImageView
                        style="@style/task_icon_style"
                        android:src="@drawable/ic_privacy_description" />

                    <TextView
                        style="@style/textview_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隐私内容描述" />

                </LinearLayout>

                <View style="@style/interval_view" />

                <android.support.v7.widget.CardView
                    style="@style/inner_cardview_style"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/input_contact_phone"
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="top|left"
                            android:hint="联系手机号码    "
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="11"
                            android:scrollbars="vertical"
                            android:textSize="15sp"
                            app:met_maxCharacters="11" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/private_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|left"
                            android:hint="添加任务的隐私描述,如快递取件号、外卖号、和与之相关的信息如姓名,地点等"
                            android:lines="5"
                            android:maxLength="30"
                            android:paddingBottom="20dp"
                            android:scrollbars="vertical"
                            android:textSize="15sp"
                            app:met_hideUnderline="true"
                            app:met_maxCharacters="30" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>