<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp">

    <LinearLayout style="@style/service_type_style">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/express_logo"
            style="@style/cicview_type"
            android:layout_gravity="center"
            android:src="@drawable/ic_folder"
            app:civ_border_color="@color/border_color"
            app:civ_border_width="@dimen/border_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="快递" />

    </LinearLayout>

    <LinearLayout style="@style/service_type_style">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/takeout_logo"
            style="@style/cicview_type"
            android:layout_gravity="center"
            android:src="@drawable/ic_restaurant"
            app:civ_border_color="@color/border_color"
            app:civ_border_width="@dimen/border_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="外卖" />
    </LinearLayout>

    <LinearLayout style="@style/service_type_style">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/other_logo"
            style="@style/cicview_type"
            android:layout_gravity="center"
            android:src="@drawable/ic_toys"
            app:civ_border_color="@color/border_color"
            app:civ_border_width="@dimen/border_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="其他" />
    </LinearLayout>

</LinearLayout>

